@model IEnumerable<TourismMVC.Models.TourPackage>

@{
    ViewData["Title"] = "My Tours";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Manage My Tours</h1>
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Create New Tour</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Price</th>
                        <th>Date</th>
                        <th>Duration</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Location</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@item.StartDate.ToShortDateString()</td>
                            <td>@item.DurationDays Days</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i> Edit</a>
                                <a asp-action="AgencyBookings" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-dark"><i class="fas fa-users"></i> Bookings</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white"><i class="fas fa-eye"></i> View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    @if (!Model.Any()) {
        <div class="alert alert-info mt-3 text-center">
            You haven't created any tours yet. Click "Create New Tour" to get started!
        </div>
    }
</div>
