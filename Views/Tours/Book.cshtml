@model TourismMVC.Models.Booking
@{
    ViewData["Title"] = "Book Tour";
    var tour = ViewBag.Tour as TourismMVC.Models.TourPackage;
}

@if (tour == null)
{
    <div class="container mt-4">
        <div class="alert alert-danger shadow-sm">
            <h4 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Tour not found!</h4>
            <p>The tour you're trying to book doesn't exist.</p>
            <hr>
            <a href="@Url.Action("Browse", "Tours")" class="btn btn-outline-danger">
                <i class="fas fa-arrow-left"></i> Back to Tours
            </a>
        </div>
    </div>
}
else
{
    <div class="container mt-4">
        <h1><i class="fas fa-calendar-plus text-primary"></i> Book: @tour.Name</h1>

        <div class="row mt-4">
            <div class="col-md-8">
                <form asp-action="Book" method="post">
                    <input type="hidden" asp-for="TourPackageId" value="@tour.Id" />
                    
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-white">
                            <h3 class="card-title mb-0">Booking Information</h3>
                        </div>
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Tour Name</label>
                                <input type="text" class="form-control" value="@tour.Name" readonly disabled>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Price per person</label>
                                <input type="text" class="form-control" value="$@tour.Price" readonly disabled>
                            </div>

                            <div class="mb-3">
                                <label asp-for="NumberOfPeople" class="form-label fw-bold">Number of People *</label>
                                <input asp-for="NumberOfPeople" class="form-control" type="number" min="1" max="10" required />
                                <span asp-validation-for="NumberOfPeople" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CustomerName" class="form-label fw-bold">Your Name *</label>
                                <input asp-for="CustomerName" class="form-control" required />
                                <span asp-validation-for="CustomerName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CustomerEmail" class="form-label fw-bold">Email Address *</label>
                                <input asp-for="CustomerEmail" class="form-control" type="email" required />
                                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                            </div>

                            <div class="d-flex gap-2 mt-4">
                                <button type="submit" class="btn btn-success btn-lg px-4">
                                    <i class="fas fa-check-circle"></i> Confirm Booking
                                </button>
                                <a href="@Url.Action("Details", new { id = tour.Id })" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-arrow-left"></i> Back to Tour
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-md-4">
                <div class="card border-primary mb-4 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h4 class="h5 mb-0"><i class="fas fa-receipt"></i> Booking Summary</h4>
                    </div>
                    <div class="card-body">
                        <p class="mb-2"><strong>Tour:</strong> @tour.Name</p>
                        <p class="mb-2"><strong>Location:</strong> @tour.Location</p>
                        <p class="mb-2"><strong>Date:</strong> @tour.StartDate.ToString("dd MMM yyyy")</p>
                        <p class="mb-2"><strong>Duration:</strong> @tour.DurationDays day(s)</p>
                        <hr>
                        <h4 class="text-primary">Price: $@tour.Price</h4>
                        <small class="text-muted">per person</small>
                    </div>
                </div>

                <div class="card border-info mb-4 shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h4 class="h5 mb-0"><i class="fas fa-question-circle"></i> Need Help?</h4>
                    </div>
                    <div class="card-body">
                        <p class="mb-2"><i class="fas fa-phone me-2"></i> Call: +61 2 9876 5432</p>
                        <p class="mb-0"><i class="fas fa-envelope me-2"></i> Email: bookings@aussietours.com.au</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
